  action        String?
  guideUrl      String?
  qrCodeUrl     String?
  qrCodeData    String?
  logs          PrinterLogs[]
  issues        PrinterIssue[]
  createdAt     DateTime       @default(now()) @db.Timestamptz(6)
  updatedAt     DateTime       @default(now()) @updatedAt @db.Timestamptz(6)

  @@schema("print-farm")
}

enum ErrorType {
